      "siProperties":{
        "name": "[variables('siHostingPlanNameTidy')]"
      },
      "siPropertiesWithASE":{
        "name": "[variables('siHostingPlanNameTidy')]",
        "hostingEnvironmentProfile": {
          "id": "[variables('aseResourceId')]"
